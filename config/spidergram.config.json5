{
  extends: ['./queries.json5', './reports.json5'],
  arango: {
    databaseName: "spidergram",
    url: "http://127.0.0.1:8529",
    auth: {
      username: "root",
    }
  },
  storageDirectory: './storage',
  outputDirectory: './output',
  offloadBodyHtml: 'db',
  spider: {
    urlOptions: {
      regions: {
        header: 'header',
        footer: 'footer',
        main: 'body',
      }
    },
    downloadMimeTypes: ['*/*'],
  },
  pageAnalysis: {
    content: { selector: ["main", "body"] }
  }
}